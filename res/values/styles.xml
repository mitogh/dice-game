<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="players">
		<item name="android:gravity">center</item>
		<item name="android:background">@null</item>
		<item name="android:inputType">textPersonName</item>
		<item name="android:textSize">60sp</item>
		<item name="android:maxLength">10</item>
	</style>
	
	<style name="button_hold" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/buttons_font_size</item>
		<item name="android:paddingTop">@dimen/buttons_padding_top</item>
		<item name="android:paddingBottom">@dimen/buttons_padding_top</item>
		<item name="android:paddingLeft">@dimen/buttons_padding_left</item>
		<item name="android:paddingRight">@dimen/buttons_padding_left</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/button_hold</item>
		<item name="android:textColor">@color/button_hold</item>
		<item name="android:layout_alignParentLeft">true</item>
    </style>
    
    
    <style name="button_roll" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/buttons_font_size</item>
		<item name="android:paddingTop">@dimen/buttons_padding_top</item>
		<item name="android:paddingBottom">@dimen/buttons_padding_top</item>
		<item name="android:paddingLeft">@dimen/buttons_padding_left</item>
		<item name="android:paddingRight">@dimen/buttons_padding_left</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/button_roll</item>
		<item name="android:textColor">@color/button_roll</item>
		<item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
