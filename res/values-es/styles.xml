<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

	<style name="players">
		<item name="android:gravity">center</item>
		<item name="android:background">@null</item>
		<item name="android:inputType">textPersonName</item>
		<item name="android:textSize">60sp</item>
		<item name="android:maxLength">10</item>
	</style>

	<style name="smallplayers">
		<item name="android:gravity">center</item>
		<item name="android:background">@null</item>
		<item name="android:inputType">textPersonName</item>
		<item name="android:textSize">30sp</item>
		<item name="android:maxLength">10</item>
	</style>
	
	<style name="message">
        <item name="android:textColor">@color/light_yellow</item>
        <item name="android:paddingLeft">@dimen/ten</item>
        <item name="android:paddingRight">@dimen/ten</item>
        <item name="android:textSize">@dimen/encouragement_message_font_size</item>
        <item name="android:gravity">center</item>
	</style>

	<style name="smallmessage">
        <item name="android:textColor">@color/light_yellow</item>
        <item name="android:paddingLeft">@dimen/ten</item>
        <item name="android:paddingRight">@dimen/ten</item>
        <item name="android:textSize">@dimen/encouragement_message_smallfont_size</item>
        <item name="android:gravity">center</item>
	</style>
	
	<style name="button_hold" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/buttons_font_size</item>
		<item name="android:paddingTop">@dimen/ten</item>
		<item name="android:paddingBottom">@dimen/ten</item>
		<item name="android:paddingLeft">@dimen/twenty</item>
		<item name="android:paddingRight">@dimen/twenty</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/button_hold</item>
		<item name="android:textColor">@color/button_hold</item>
		<item name="android:layout_alignParentLeft">true</item>
    </style>

		<style name="button_holdsmall" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/buttons_smallfont_size</item>
		<item name="android:paddingTop">@dimen/five</item>
		<item name="android:paddingBottom">@dimen/five</item>
		<item name="android:paddingLeft">@dimen/five</item>
		<item name="android:paddingRight">@dimen/five</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/button_hold</item>
		<item name="android:textColor">@color/button_hold</item>
		<item name="android:layout_alignParentLeft">true</item>
    </style>
    
    
    <style name="button_roll" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/buttons_font_size</item>
		<item name="android:paddingTop">@dimen/ten</item>
		<item name="android:paddingBottom">@dimen/ten</item>
		<item name="android:paddingLeft">@dimen/twenty</item>
		<item name="android:paddingRight">@dimen/twenty</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/button_roll</item>
		<item name="android:textColor">@color/button_roll</item>
		<item name="android:layout_alignParentRight">true</item>
    </style>

	<style name="button_rollsmall" parent="@android:style/Widget.Button">
		<item name="android:textSize">@dimen/buttons_smallfont_size</item>
		<item name="android:paddingTop">@dimen/five</item>
		<item name="android:paddingBottom">@dimen/five</item>
		<item name="android:paddingLeft">@dimen/five</item>
		<item name="android:paddingRight">@dimen/five</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/button_roll</item>
		<item name="android:textColor">@color/button_roll</item>
		<item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
