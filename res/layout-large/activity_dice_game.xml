<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@drawable/background_pattern"
    tools:context=".DiceGame" >
	
    <!-- Hiding focus from the inputs -->
	<LinearLayout
    	android:focusable="true" 
    	android:focusableInTouchMode="true"
    	android:layout_width="0dp" 
    	android:layout_height="0dp"/>
	
	<!-- Top Bar  -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/light_blue"
	    android:orientation="vertical"
	    android:layout_marginBottom="@dimen/margin_bar">
		<TextView 
        	android:id="@+id/round"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingTop="@dimen/padding_bar"
        	android:paddingBottom="@dimen/padding_bar"
        	android:textSize="@dimen/bar_font_size"
        	android:textColor="@color/text_light_blue"
        	android:gravity="center"
        	/>
		<View 
		    android:layout_width="match_parent"
    		android:layout_height="5dp"
			android:background="@color/dark_blue" />
	</LinearLayout>
	
	<!--  Versus Bar -->
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal">
		
	    <TextView 
	        android:id="@+id/player1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/points_font_size"	/>
	    
	    <TextView 
	        android:id="@+id/player2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/points_font_size" />
	    

    </LinearLayout>
    
	<!-- Names Box -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
		<EditText
	        android:id="@+id/editText_player1_name"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:inputType="textPersonName"
	        android:textSize="50sp"
	        android:textColor="@color/text_white"
	        android:gravity="center"
	        android:text="@string/player1_name" >
	    </EditText>
		<EditText
	        android:id="@+id/editText_player2_name"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@null"
	        android:inputType="textPersonName"
	        android:textSize="50sp"
	        android:textColor="@color/text_gray"
	        android:gravity="center"
	        android:text="@string/player2_name" >
	    </EditText>
	</LinearLayout>
    
	<!-- Buttons Bar -->
    <TextView 
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"/>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
	    
	    <Button 
	        android:id="@+id/button_hold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/hold"
	        style="@style/button_hold"/>
	
		<Button 
	        android:id="@+id/button_roll"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/roll"
	        style="@style/button_roll"/>
	</RelativeLayout>

</LinearLayout>
